<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Waste_Recycled</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISPICKVAL(Activity_Type__c, &quot;Recycling&quot;),
  OR(
    ISBLANK(Waste_Recycled__c),
    Waste_Recycled__c &lt;= 0
  )
)</errorConditionFormula>
    <errorDisplayField>Waste_Recycled__c</errorDisplayField>
    <errorMessage>Please enter a valid Waste Recycled amount (must be greater than 0).</errorMessage>
</ValidationRule>
