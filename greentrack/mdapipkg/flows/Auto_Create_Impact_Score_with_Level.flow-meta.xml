    </formulas>
    <formulas>
        <name>Eco_Type</name>
        <dataType>String</dataType>
        <expression>$Record.Id</expression>
    </formulas>
    <formulas>
        <name>Total_CO2_Saved</name>
        <dataType>Number</dataType>
        <expression>$Record.Trees_Planted__c * 21 + $Record.Waste_Recycled__c * 1.5</expression>
        <scale>2</scale>
    </formulas>
    <formulas>
        <name>varTotalCO2</name>
        <dataType>Number</dataType>
        <expression>{!$Record.Trees_Planted__c} * 21 + {!$Record.Waste_Recycled__c} * 1.5</expression>
        <scale>2</scale>
    </formulas>
