<?xml version="1.0" encoding="UTF-8"?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <decisions>
        <name>Determine_Impact_Level</name>
        <label>Determine Impact Level</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <defaultConnector>
            <targetReference>Create_Impact_Score_as_Champion</targetReference>
        </defaultConnector>
        <defaultConnectorLabel>Champion</defaultConnectorLabel>
        <rules>
            <name>Beginner</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>varTotalCO2</leftValueReference>
                <operator>LessThanOrEqualTo</operator>
                <rightValue>
                    <numberValue>100.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_Impact_Score_as_Beginner</targetReference>
            </connector>
            <label>Beginner</label>
        </rules>
        <rules>
            <name>Intermediate</name>
            <conditionLogic>and</conditionLogic>
            <conditions>
                <leftValueReference>varTotalCO2</leftValueReference>
                <operator>GreaterThan</operator>
                <rightValue>
                    <numberValue>100.0</numberValue>
                </rightValue>
            </conditions>
            <conditions>
                <leftValueReference>varTotalCO2</leftValueReference>
                <operator>LessThanOrEqualTo</operator>
                <rightValue>
                    <numberValue>500.0</numberValue>
                </rightValue>
            </conditions>
            <connector>
                <targetReference>Create_Impact_Score_as_Intermediate</targetReference>
            </connector>
            <label>Intermediate</label>
        </rules>
    </decisions>
    <environments>Default</environments>
    <formulas>
        <name>Eco_Activity</name>
        <dataType>String</dataType>
