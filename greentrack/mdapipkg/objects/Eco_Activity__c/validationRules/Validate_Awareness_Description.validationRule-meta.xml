<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Validate_Awareness_Description</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  ISPICKVAL(Activity_Type__c, &quot;Awareness Drive&quot;),
  ISBLANK( Description__c )
)</errorConditionFormula>
    <errorDisplayField>Description__c</errorDisplayField>
    <errorMessage>Please provide a description for the Awareness Drive.</errorMessage>
</ValidationRule>
